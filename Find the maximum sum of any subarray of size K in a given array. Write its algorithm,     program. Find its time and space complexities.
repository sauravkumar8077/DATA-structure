public class MaxSumSubarrayK {
    public static int maxSumKSubarray(int[] arr, int k) {
        int n = arr.length;
        if (n < k) {
         return -1; 
        } 

        int maxSum = 0;
        int windowSum = 0;

        for (int i = 0; i < k; i++) {
            windowSum += arr[i];
        }

        maxSum = windowSum;

        for (int i = k; i < n; i++) {
            windowSum += arr[i] - arr[i - k]; 
            maxSum = Math.max(maxSum, windowSum);
        }

        return maxSum;
    }

    public static void main(String[] args) {
        int[] arr = {2, 1, 5, 1, 3, 2};
        int k = 3;
        int result = maxSumKSubarray(arr, k);
        System.out.println("Maximum sum of a subarray of size " + k + " is: " + result);
    }
}
// Time complexity=O(n)
// Space complexity=O(1)
